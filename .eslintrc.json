{
    "env": {
        "mocha": true,
        "browser": true
    },
    "extends": "airbnb-base",
    "globals": {
        "io": true
    },
    "rules": {
        "no-console": "off",
        "no-plusplus": "off",
        "class-methods-use-this": "off",
        "no-restricted-syntax": "off",
        "max-len": ["error", {
            "code": 140
        }],
        "no-param-reassign": ["error", { 
            "props": false 
        }],
        "no-await-in-loop": "off"
    }
}